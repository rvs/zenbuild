kernel:
  image: KERNEL_TAG
  cmdline: "rootdelay=3"
init:
  - GRUB_TAG
  - DTREES_TAG
  - XEN_TAG
  - linuxkit/init:v0.3
  - linuxkit/runc:v0.3
  - linuxkit/containerd:v0.3
  - linuxkit/getty:v0.3
onboot:
  - name: installer
    image: INSTALLER_TAG
    command: ["/install.sh", "/dev/sda"]
trust:
  org:
    - linuxkit

